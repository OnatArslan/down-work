model User {
  id                Int      @id @default(autoincrement())
  username          String
  email             String   @unique
  bio               String?
  password          String
  profilePictureUrl String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  passwordChangedAt DateTime @default(now())
  role              Role     @default(client)
  // Releatinships
  createdJobs       Job[]
  proposals Proposal[]
  @@index([email])
  @@map("user")
}

enum Role {
  freelancer
  client
  admin
}
