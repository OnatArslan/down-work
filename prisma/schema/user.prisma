model User {
  id                Int      @id @default(autoincrement())
  username          String
  email             String   @unique
  bio               String?
  createdAt         DateTime @default(now())
  password          String
  profilePictureUrl String?
  role              Role     @default(client)
  updatedAt         DateTime @updatedAt
  passwordChangedAt DateTime
  createdJobs       Job[]

  @@index([email])
  @@map("user")
}

enum Role {
  freelancer
  client
  admin
}
