model Job {
  id          Int         @id @default(autoincrement())
  title       String
  description String
  budget      Decimal
  paymentType PaymentType
  status      Status      @default(open)
  employerId  Int
  employer    User        @relation(fields: [employerId], references: [id])
}

enum PaymentType {
  hourly
  fixed
}

enum Status {
  open
  progress
  complated
  closed
}
