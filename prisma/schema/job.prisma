model Job {
    id Int @id @default(autoincrement())
    title String
    description String @db.Text
    budget Decimal
    paymentType PaymentType
    status Status @default(open)
    employer User @relation(fields: [employerId],references: [id])
    employerId Int
}

enum PaymentType {
    hourly
    fixed
}

enum Status {
    open
    progress
    complated
    closed
}