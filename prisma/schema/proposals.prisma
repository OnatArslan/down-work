
model Proposal {
    id          Int         @id @default(autoincrement())
    text String @db.Text
    price Decimal
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    status ProposalStatus @default(pending)
    freelancer User @relation("sendedProposals",fields: [freelancerId],references: [id])
    freelancerId Int
    clientId Int
    client User @relation("recievedProposals",fields: [clientId],references: [id])
    jobId Int
    job Job @relation(fields: [jobId], references: [id])
    @@map("proposal")
}

enum ProposalStatus{
    pending
    accepted
    declined
}